<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data> 
        <!--Invoicing invoices Inherit Form View  -->
        <record id ="inherit_invoices_form_view" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="order_nm" invisible="1"/>
                    <field name="order_date" invisible="1"/>
                    <field name="delivery_date" invisible="1"/>
                    <field name="bill_amt_rs" invisible="1"/>
                    <field name="cash_disc_rs" invisible="1"/>
                    <field name="inv_amt" invisible="1"/>
                    <field name="bill_type" invisible="1"/>
                    <field name="balance_rs" invisible="1"/>
                    <field name="ptype" widget="radio" invisible="1"/>
                    <field name="purity" invisible="1"/>
                    <field name="time_type" widget="radio" invisible="1"/>
                </field>
                <field name="invoice_date" position="after">
                    <field name="stone" invisible="1"/>
                    <field name="net_weight" invisible="1"/>
                    <field name="wastage_gms" invisible="1"/>
                    <field name="wastage" invisible="1"/>
                    <field name="initial" invisible="1"/>
                    <field name="size" invisible="1"/>
                    <field name="description" invisible="1"/>
                    <field name="mc_piece_rs" invisible="1"/>
                    <field name="mc_weight_gm" invisible="1"/>
                    <field name="store_amt_rs" invisible="1"/>    
                </field>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="string">Rate</attribute> 
                </xpath>
                
                <!-- <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="adv_paid_rs"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='tax_ids']" position="before">
                    <field name="adv_paid_rs"/>
                </xpath> -->
            </field>
        </record>  
   </data>
</odoo>
