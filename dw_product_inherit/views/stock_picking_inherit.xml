<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit stock picking form view -->
        <record id="stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- Hide Operations tab -->
                <xpath expr="//page[@name='operations']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!-- Add new Detailed Operations page as first tab -->
                <xpath expr="//notebook/page[1]" position="before">
                    <page name="detailed_operations_custom" string="Operations" active="1">
                        <field name="move_line_ids" context="{'picking_type_id': picking_type_id}">
                            <tree editable="bottom">
                                <field name="company_id" invisible="1"/>
                                <field name="product_id" required="1" domain="[('type', '!=', 'service'), '|', ('company_id', '=', False), ('company_id', '=', company_id)]"/>
                                <field name="lot_id" domain="[('product_id', '=', product_id)]" context="{'default_product_id': product_id}"/>
                                <field name="qty_done" string="Done"/>
                                <field name="location_id" groups="stock.group_stock_multi_locations" required="1"/>
                                <field name="location_dest_id" groups="stock.group_stock_multi_locations" required="1"/>
                                <field name="source_on_hand_qty" readonly="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>