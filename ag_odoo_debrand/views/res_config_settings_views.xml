<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_inh_rebrand" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inh.ag.rebrand</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('app_settings_block')]/div[@id='languages']" position="after">
                    <div id="odoo_rebrand">
                        <h2>Dreamwarez Customize Setting</h2>
                        <div class="row mt16 o_settings_container" name="rebrand_setting_container">
                            <div class="col-xs-12 col-md-6 o_setting_box" id="rebrand_setting">
                                <div class="o_setting_right_pane">
                                    <div class="w-50">
                                        <label for="odoo_tittle_name"/>
                                        <div>
                                            <field name="odoo_tittle_name"/>
                                            <div>
                                                <a href="https://www.dreamwarez.in" target="_blank">Visit our website for more information.</a>
                                            </div>
                                        </div>
                                        <label for="odoo_website_url"/>
                                        <div>
                                            <field name="odoo_website_url"/>
                                        </div>
                                        <label for="show_login_powered_by"/>
                                        <div>
                                            <field name="show_login_powered_by"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
