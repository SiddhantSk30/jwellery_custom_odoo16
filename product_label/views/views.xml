<odoo>
    <data>
        <record id="paperformat_product_label" model="report.paperformat">
            <field name="name">Custom Product Label</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">22</field>
            <field name="page_width">160</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">1</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="product_label_custom" model="ir.actions.report">
            <field name="name">Product barcode</field>
            <field name="model">product.template</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">product_label.report_producttemplatelabel_custom</field>
            <field name="report_file">product_label.report_producttemplatelabel_custom</field>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_product_label"/>
            <field name="print_report_name">(object._get_report_base_filename())</field>
        </record>

        <template id="report_producttemplatelabel_custom">
            <t t-call="web.basic_layout">
                <div class="page" style='float:left;'>
                    <t t-foreach="docs" t-as="product">
