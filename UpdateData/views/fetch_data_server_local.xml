<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <!--  Product Synch Server To Local  -->
       <record id="ir_cron_product_updater" model="ir.cron">
            <field name="name">Product Update Server To Local</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="state">code</field>
            <field name="code">model.update_products_server_to_local()</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
       </record>
</odoo>