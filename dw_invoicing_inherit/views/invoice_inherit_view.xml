<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data> 
        <!--Invoicing invoices Inherit Form View  -->
        <record id ="inherit_invoices_form_view" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="order_nm"/>
                    <field name="order_date"/>
                    <field name="delivery_date"/>
                    <field name="bill_amt_rs"/>
                    <field name="cash_disc_rs"/>
                    <field name="inv_amt"/>
                    <field name="bill_type"/>
                    <field name="balance_rs"/>
                    <field name="ptype" widget="radio"/>
                    <field name="purity"/>
                    <field name="time_type" widget="radio"/>
                </field>
                <field name="invoice_date" position="after">
                    <field name="stone"/>
                    <field name="net_weight"/>
                    <field name="wastage_gms"/>
                    <field name="wastage"/>
                    <field name="initial"/>
                    <field name="size"/>
                    <field name="description"/>
                    <field name="mc_piece_rs"/>
                    <field name="mc_weight_gm"/>
                    <field name="store_amt_rs"/>    
                </field>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="string">Rate</attribute> 
                </xpath>
                
                <!-- <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="adv_paid_rs"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='tax_ids']" position="before">
                    <field name="adv_paid_rs"/>
                </xpath> -->
            </field>
        </record>  
   </data>
</odoo>
