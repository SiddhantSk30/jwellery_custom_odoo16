<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_delivery_order_report_wizard_form" model="ir.ui.view">
            <field name="name">delivery.order.report.wizard.form</field>
            <field name="model">delivery.order.report</field>
            <field name="arch" type="xml">
                <form string="Print Delivery Orders">
                   
                        <group>
                            <field name="report_type"/>
                            <field name="location_id" options="{'no_create_edit': True}"/>
                            <field name="filter"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    <footer>
                        <button string="Print" type="object" name="print_delivery_orders" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_delivery_order_report_wizard" model="ir.actions.act_window">
            <field name="name">Delivery Order Report Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">delivery.order.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_delivery_order_report_wizard_form"/>
            <field name="target">new</field>
        </record>

        <!-- <menuitem id="menu_delivery_order_report_wizard_action" name="Reports" action="action_delivery_order_report_wizard" parent="stock.menu_stock_root"  groups="dw_delivery_orders_report.group_delivery_order_report"/> -->
    </data>
</odoo>
