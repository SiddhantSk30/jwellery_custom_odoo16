<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- create, read, edit, delete access group for admin user -->
        <record model="ir.module.category" id="module_product_admin">
            <field name="name">Inventory Module</field>
            <field name="description">Category for Product status</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="product_group_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="dw_product_inherit.module_product_admin"/>
        </record>

        <record id="group_product_deleted" model="res.groups">
            <field name="name">DW: Product can be deleted</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_standard_price" model="res.groups">
            <field name="name">Standard Price Group</field>
            <field name="category_id" ref="base.module_category_usability"/>
        </record>
        <record id="access_product_template_standard_price_read" model="ir.model.access">
            <field name="name">Access Product Standard Price Read</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="group_id" ref="dw_product_inherit.group_standard_price"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="group_fields_invisible" model="res.groups">
            <field name="name">HSN And Product Type Field visible</field>
            <field name="category_id" ref="base.module_category_usability"/>
        </record>
        <record id="access_products_forms_view_fields" model="ir.model.access">
            <field name="name">Access Product Form View Field visible</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="group_id" ref="dw_product_inherit.group_fields_invisible"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>